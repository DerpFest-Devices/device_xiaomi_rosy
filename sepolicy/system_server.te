#============= system_server ==============
get_prop(system_server, vendor_camera_prop)
get_prop(system_server, vendor_alarm_boot_prop)

# Camera
allow system_server persist_camera_prop:file { getattr open read };

# Input devices
allow system_server idc_file:dir r_dir_perms;
allow system_server keylayout_file:dir r_dir_perms;

# Thermal service
allow system_server thermal_service:service_manager find;
